

{% macro formSearch() %}
    <form action="#" class="form-search" method="POST"> <!-- Action : page avec le résultat - Method : get -->
        <div class="input-icon">
            <img src="{{ asset('img/localisation.png') }}" alt="Une icone pour le départ">
            <input id="search-run-departure" type="text" name="search-run-departure" placeholder="d'où partez-vous?">
        </div>
        <div class="input-icon">
            <img src="{{ asset('img/destination.png') }}" alt="Une icone pour la destination">
            <input id="search-run-arrival" type="text" name="search-run-departure" placeholder="où allez-vous ?" value="{{ 'ok' }}">
        </div>
        <div class="input-icon">
            <img src="{{ asset('img/calendar.png') }}" alt="Une icone de calendrier">
            <input type="date" name="departure-schedule" placeholder="date de départ">
        </div>
        <form action="{{ path('listRuns') }}">
            <button type="submit">Rechercher</button> <!-- Diriger vers la recherche -->
        </form>
    </form>
{% endmacro %}